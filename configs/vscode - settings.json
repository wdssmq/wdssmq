{
  "security.workspace.trust.untrustedFiles": "open",
  // 窗口尺寸及缩放
  // "window.zoomLevel": 1,
  "window.newWindowDimensions": "maximized", // 最大化显示新窗口
  "window.restoreWindows": "none", // 是否恢复窗口内容
  // 工作台外观显示
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.activityBar.visible": false,
  // "workbench.editor.enablePreview": false,
  // 终端配置项
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', monospace",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // 字体显示
  "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  // 代码自动提示
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggest.shareSuggestSelections": true,
  "editor.inlineSuggest.enabled": true,
  // 折行控制
  "editor.wordWrapColumn": 137,
  "editor.wordWrap": "bounded",
  // Git 相关
  "git.confirmSync": false, // 同步前是否确认
  "git.autofetch": true, // 自动拉取
  // 排除选项
  "search.exclude": {
      "**/.history": true
  },
  "files.exclude": {
      "**/.history": true
  },
  "files.watcherExclude": {
      "**/.history": true
  },
  // eslint 校验
  "eslint.validate": [
      "javascript",
      "javascriptreact",
      "vue"
  ],
  // 各种文件的排版
  "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
      "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
  },
}
